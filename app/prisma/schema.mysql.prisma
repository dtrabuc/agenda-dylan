// Prisma schema for Production (Alwaysdata - MySQL/MariaDB)

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql" // Works with MySQL and MariaDB (v10.11)
  url      = env("DATABASE_URL")
}

// Models copied from SQLite schema to keep a single source of truth

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  events    Event[]

  @@map("users")
}

model Event {
  id          String    @id @default(cuid())
  title       String
  description String?
  startDate   DateTime
  endDate     DateTime?
  location    String?
  isAllDay    Boolean   @default(false)
  color       String?   @default("#3b82f6")
  status      String    @default("SCHEDULED")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("events")
}
